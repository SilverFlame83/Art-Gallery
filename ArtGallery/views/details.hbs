<section id="details-page">
  <h1>Details</h1>
  <article class="details-card">

    <article class="details-card-text">
      <h2>Title:<br />{{exam.title}}</h2>
      <h3>Author: </h3>
      <h3>Painting technique: {{exam.technique}}</h3>
      <h3>Certificate of authenticity: {{exam.certificate}}</h3>

      <!-- If there is no registered user, do not display buttons-->

      <div class="buttons">
        {{#if user}}
        <!-- Only for registered user and author of the publication -->
        {{#if exam.isOwner}}
        <a href="/exam/edit/{{exam._id}}" class="btn-edit">Edit</a>
        <a href="/exam/delete/{{exam._id}}" class="btn-delete">Delete</a>
        <!-- logged in user who has not yet shared the publication-->
       {{else}}
        {{#unless exam.shared}}
        <a href="/exam/share/{{exam._id}}" class="btn-share">Share publication</a>
        <!-- logged in user who has already shared the publication-->
        {{else}}
        <p class="shared-pub">You already shared this publication</p>
       {{/unless}}
        {{/if}}
        {{/if}}
      </div>

    </article>

    <article class="details-card-image">
      <img src="{{exam.imageUrl}}" alt="art-image2" />
    </article>

  </article>
</section>