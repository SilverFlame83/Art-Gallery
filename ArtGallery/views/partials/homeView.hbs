  <article class="content-publication">
      <h1>Title: {{title}}</h1>

      <!--If no one has shared the post yet, the number should be zero -->
      {{#unless usersShared}}
      <p>Number of people shared the publication: 0</p>
      <a href="/exam/details/{{_id}}" class="image-details">View publication</a>

      <!--Otherwise, show the number -->
      {{else}}
      <p>Number of people shared the publication: {{usersShared.length}}</p>
      <a href="/exam/details/{{_id}}" class="image-details">View publication</a>
      {{/unless}}
    </article>